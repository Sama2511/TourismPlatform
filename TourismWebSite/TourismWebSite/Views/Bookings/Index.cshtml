@model IEnumerable<TourismWebSite.Models.Booking>
@{
    ViewBag.Title = "My Bookings";
    var reviewed = ViewBag.ReviewedIds as HashSet<int> ?? new HashSet<int>();
}

<h2>My Bookings</h2>

@if (!Model.Any())
{
    <p>You haven’t booked any tours yet.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Tour</th>
                <th>Destination</th>
                <th>Dates</th>
                <th class="text-end">Price</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var b in Model)
            {
                var t = b.Tour;
                bool canReview = t != null && t.EndDate <= DateTime.Today && !reviewed.Contains(b.BookingId);

                <tr>
                    <td>@(t?.Name ?? "")</td>
                    <td>@(t?.Destination ?? "")</td>
                    <td>
                        @(t?.StartDate.ToShortDateString() ?? "")
                        @(t != null ? " – " + t.EndDate.ToShortDateString() : "")
                    </td>
                    <td class="text-end">@(t != null ? t.Price.ToString("C") : "")</td>
                    <td class="text-end">

                        @* Remove button *@
                        @using (Html.BeginForm("Delete", "Bookings", FormMethod.Post, new { @class = "d-inline" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.Hidden("id", b.BookingId)
                            <button type="submit" class="btn btn-sm btn-danger"
                                    onclick="return confirm('Remove this booking?');">
                                Remove
                            </button>
                        }

                        @* Review button or badge *@
                        @if (canReview)
                        {
                            <a class="btn btn-sm btn-success"
                               href="@Url.Action("Create", "Reviews", new { bookingId = b.BookingId })">
                                Add Review
                            </a>

                        }
                        else if (reviewed.Contains(b.BookingId))
                        {
                            <span class="badge bg-success ms-1">Reviewed</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
