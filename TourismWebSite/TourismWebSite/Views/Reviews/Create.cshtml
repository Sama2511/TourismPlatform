@model TourismWebSite.Models.Review
@{
    ViewBag.Title = "Write Review";
}

<h2>Write a Review for @ViewBag.TourName</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.BookingId)

    <div class="form-group">
        <label>Rating</label>
        <div class="d-flex gap-2">
            @for (int i = 1; i <= 5; i++)
            {
                <label class="btn btn-outline-warning">
                    <input type="radio" name="Rating" value="@i" /> @i ★
                </label>
            }
        </div>
    </div>

    <div class="form-group">
        <label>Comment</label>
        @Html.TextAreaFor(m => m.Comment, new { @class = "form-control", rows = 5 })
    </div>

    <button type="submit" class="btn btn-primary mt-2">Submit Review</button>
}
