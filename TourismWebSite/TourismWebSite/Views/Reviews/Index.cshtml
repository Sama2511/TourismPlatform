@model IEnumerable<TourismWebSite.Models.Review>

@{
    ViewBag.Title = "Reviews";
}

<h2 class="mb-3">All Reviews</h2>

@if (!Model.Any())
{
    <p>No reviews have been submitted yet.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Tour</th>
                <th>Rating</th>
                <th>Comment</th>
                <th>Created At</th>
                <th>User</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in Model)
            {
                <tr>
                    <td>@(r.Booking?.Tour?.Name ?? "N/A")</td>
                    <td>
                        @for (int i = 0; i < r.Rating; i++)
                        {
                            <span class="text-warning">&#9733;</span> @* star character *@
                        }
                        @for (int i = r.Rating; i < 5; i++)
                        {
                            <span class="text-muted">&#9733;</span>
                        }
                    </td>
                    <td>@r.Comment</td>
                    <td>@r.CreatedAt.ToString("g")</td>
                    <td>@r.User?.FullName</td>
                    <td>@r.CreatedAt.ToString("yyyy-MM-dd")</td>
                </tr>
            }
        </tbody>
    </table>
}
